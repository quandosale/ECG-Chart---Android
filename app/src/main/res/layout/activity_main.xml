<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.hero.ecgchart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hero.ecgchart.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <com.example.hero.ecgchart.ECGChart
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#333333"
            android:id="@+id/ecg_sweep_chart"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            custom:graphMode="1"
            custom:lineColor="#00ff00"
            custom:grid="true"
            custom:windowSize="1000"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toggleZoom"
            android:text="Button" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.hero.ecgchart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hero.ecgchart.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        android:paddingTop="14dp"
        tools:layout_editor_absoluteX="8dp">

        <com.example.hero.ecgchart.ECGChart
            android:layout_marginLeft="14dp"
            android:layout_marginRight="7dp"
            android:background="#333333"
            android:id="@+id/ecg_sweep_chart"
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            custom:graphMode="0"
            custom:lineColor="#00ff00"
            custom:windowSize="1000"/>
        <com.example.hero.ecgchart.ECGChart
            android:layout_marginLeft="7dp"
            android:layout_marginRight="14dp"
            android:background="#333333"
            android:id="@+id/ecg_flow_chart"
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            custom:graphMode="1"

            custom:lineColor="#ffffff"
            custom:windowSize="1000"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
